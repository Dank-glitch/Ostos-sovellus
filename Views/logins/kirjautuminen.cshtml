@model HereWeGo.Models.login
@{
    ViewBag.Title = "Kirjautuminen";
}
<h2>Kirjautuminen</h2>
@using (Html.BeginForm("Authorize", "logins", FormMethod.Post))

{ 
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.userid)
    <div class="form-group">
        <label class="control-label col-md-2">Käyttäjänimi</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Salasana</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
        </div>
    </div>
        <label class="text-danger">
            @Html.DisplayFor(model => model.LoginErrorMessage)
        </label>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kirjaudu sisään" class="btn btn-success" />
            </div>
        </div>
    </div>
}