@model IEnumerable<HereWeGo.Models.store>

@{
    ViewBag.Title = "Ostoslista";
}

<h2>Ostokset</h2>

<p>
    @Html.ActionLink("Lisää uusi", "Create")
</p>
<table class="table">
    <tr>
        <th>
Päivämäärä
        </th>
        <th>
Hinta
        </th>
        <th>
Kuvaus
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.date.ToString("dd/MM/yyyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.ActionLink("Muokkaa", "Edit", new { id=item.ostosid }) |
            @Html.ActionLink("Lisätiedot", "Details", new { id=item.ostosid }) |
            @Html.ActionLink("Poista", "Delete", new { id=item.ostosid })
        </td>
    </tr>
}

</table>
